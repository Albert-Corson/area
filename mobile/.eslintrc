{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "codeFrame": true,
    "ecmaFeatures": {
      "jsx": false
    }
  },
  "env": {
    "es6": true,
    "jquery": true
  },
  "extends": ["plugin:react/all", "airbnb"],
  "plugins": ["react", "babel"],
  "rules": {
    "arrow-body-style": ["warn", "as-needed"],
    "arrow-parens": ["error", "always"],
    "comma-dangle": ["error", "always-multiline"],
    "camelcase": "off",
    "global-require": "off",
    "max-len": [
      "error",
      120,
      { "ignoreUrls": true, "ignoreRegExpLiterals": true, "ignoreComments": true, "ignoreStrings": true }
    ],
    "curly": "off",
    "nonblock-statement-body-position": "off",
    "new-cap": "off",
    "object-curly-newline": "off",
    "newline-per-chained-call": "off",
    "no-case-declarations": "off",
    "no-confusing-arrow": "off",
    "no-console": "off",
    "no-param-reassign": "off",
    "no-template-curly-in-string": "off",
    "no-trailing-spaces": "error",
    "lines-between-class-members": ["error", "always"],
    "no-underscore-dangle": "off",
    "no-unused-expressions": ["error", { "allowShortCircuit": true, "allowTernary": true }],
    "no-unused-vars": ["error", { "argsIgnorePattern": "(?:meta|omit.*|_)" }],
    "quote-props": "off",
    "semi": ["warn", "never"],
    "jsx-a11y/no-autofocus": "off",
    "react/state-in-constructor": "off",
    "react/jsx-props-no-spreading": "off",
    "react/button-has-type": "off",
    "react/jsx-boolean-value": "error",
    "react/jsx-child-element-spacing": "off",
    "react/jsx-max-depth": "off",
    "react/jsx-curly-spacing": ["error", { "when": "never", "children": true }],
    "react/jsx-filename-extension": "off",
    "react/jsx-fragments": "off",
    "react/jsx-indent": ["error", 2],
    "react/jsx-indent-props": ["error", 2],
    "react/jsx-key": "error",
    "react/jsx-no-duplicate-props": "error",
    "react/jsx-space-before-closing": "off",
    "react/jsx-no-target-blank": "off",
    "react/no-did-mount-set-state": "error",
    "react/no-did-update-set-state": "off",
    "react/no-unescaped-entities": "off",
    "react/no-unused-prop-types": "error",
    "react/prefer-es6-class": "error",
    "react/prop-types": ["error", { "ignore": ["meta"] }],
    "react/forbid-prop-types": "off",
    "react/require-default-props": "off",
    "react/no-string-refs": "off",
    "react/destructuring-assignment": "off",
    "react/no-access-state-in-setstate": "off",
    "react/sort-comp": [1, { "order": ["static-variables", "static-methods", "constructor", "instance-variables", "lifecycle", "everything-else", "render"] }],
    "react/jsx-one-expression-per-line": "off",
    "react/static-property-placement": ["error", "static public field"],
    "react/jsx-sort-default-props": "off",

    "react/prefer-stateless-function": "off",

    "import/no-extraneous-dependencies": "off",
    "import/no-unresolved": "off",
    "import/extensions": ["error", { "jsx": "never", "gql": "always", "json": "always", "scss": "always" }],
    "import/prefer-default-export": "off",

    "jsx-a11y/anchor-has-content": "off",
    "jsx-a11y/href-no-hash": "off",
    "jsx-a11y/label-has-for": "off",
    "jsx-a11y/img-has-alt": "off",
    "jsx-a11y/media-has-caption": "off",
    "jsx-a11y/no-static-element-interactions": "off",
    "jsx-a11y/no-noninteractive-element-interactions": "off",
    "jsx-a11y/click-events-have-key-events": "off",
    "jsx-a11y/label-has-associated-control": "off",
    "jsx-a11y/mouse-events-have-key-events": "off",
    "jsx-a11y/anchor-is-valid": "off",
    "jsx-a11y/control-has-associated-label": "off"
  },
  "globals": {
    "navigator": true,
    "document": true,
    "FormData": true,
    "expect": true,
    "describe": true,
    "it": true,
    "beforeAll": true,
    "beforeEach": true,
    "afterAll": true,
    "window": true,
    "google": true,
    "Event": true,
    "FB": true,
    "FileReader": true,
    "AWS": true,
    "URL": true
  }
}
